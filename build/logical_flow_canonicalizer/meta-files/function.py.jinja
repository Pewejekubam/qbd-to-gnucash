{# Function template for IR-Based Build System #}
def {{ function_name }}({% if params %}{{ params|join(', ') }}{% endif %}){% if return_type %} -> {{ return_type }}{% endif %}:
    """{{ function_description }}

    {% if param_docs %}
    Args:
        {%- for param, desc in param_docs.items() %}
        {{ param }}: {{ desc }}
        {%- endfor %}
    {% endif %}
    {% if return_doc %}
    Returns:
        {{ return_doc }}
    {% endif %}
    {% if raises %}
    Raises:
        {%- for error, desc in raises.items() %}
        {{ error }}: {{ desc }}
        {%- endfor %}
    {% endif %}
    """
    {% if function_body %}
    {%- for line in function_body %}
    {{ line }}
    {%- endfor %}
    {% endif %}
