{# Class template for IR-Based Build System #}
class {{ class_name }}{% if base_classes %}({{ base_classes|join(', ') }}){% endif %}:
    """{{ class_description }}"""

    {% if class_attributes %}
    {%- for attr in class_attributes %}
    {{ attr }}
    {%- endfor %}
    {% endif %}

    def __init__(self{% if init_params %}, {{ init_params|join(', ') }}{% endif %}):
        """Initialize {{ class_name }}.
        
        {% if init_param_docs %}
        Args:
            {%- for param, desc in init_param_docs.items() %}
            {{ param }}: {{ desc }}
            {%- endfor %}
        {% endif %}
        """
        {% if init_body %}
        {%- for line in init_body %}
        {{ line }}
        {%- endfor %}
        {% endif %}

    {% if methods %}
    {%- for method in methods %}
    {{ method }}
    {% endfor %}
    {%- endif %}
